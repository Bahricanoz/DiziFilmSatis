@model DiziFilmSatis.Models.Entity.Tbl_Filmdizi
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div style="margin-top:20px;">
    <h3 style="color:cadetblue">Dizi - Film Güncelleme Sayfası</h3>
</div>
@using (Html.BeginForm("Guncelle", "Satis", FormMethod.Post))
 {
    <table class="table table-hover">
        <tr>
            <td><label>Dizi - Film Adı:</label></td>
            <td>
                @Html.TextBoxFor(x => x.Ad, new { @class = "form-control", @required = "required" })
            </td>
        </tr>
        <tr>
            <td><label>Kategori:</label></td>
            <td>
                @Html.DropDownListFor(x => x.Tbl_Kategori.Id, (List<SelectListItem>)ViewBag.kat, "Lütfen Kategori Seçiniz", new { @class = "form-control", @required = "required" })
            </td>
        </tr>
        <tr>
            <td><label>Tür:</label></td>
            <td>
                @Html.DropDownListFor(x => x.Tbl_Tur.Id, (List<SelectListItem>)ViewBag.tur, "Lütfen Yönetmen Seçiniz", new { @class = "form-control", @required = "required" })
            </td>
        </tr>
        <tr>
            <td><label>Yönetmen:</label></td>
            <td>
                @Html.DropDownListFor(x => x.Tbl_Yonetmen.Id, (List<SelectListItem>)ViewBag.yonet, "Lütfen Yönetmen Seçiniz", new { @class = "form-control", @required = "required" })
            </td>
        </tr>
        <tr>
            <td><label>Görsel:</label></td>
            <td>
                @Html.TextBoxFor(x => x.Foto, new { @class = "form-control", @required = "required" })
            </td>
        </tr>
        <tr>
            <td><label>Detay:</label></td>
            <td>
                @Html.TextAreaFor(x => x.Detay, new { @class = "form-control", @required = "required", @style="height:125px;" })
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <button class="btn btn-primary">Dizi - Film Güncelle</button>
            </td>
        </tr>
    </table>
}
