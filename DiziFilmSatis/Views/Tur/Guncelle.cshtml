@model DiziFilmSatis.Models.Entity.Tbl_Tur
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div style="margin-top:20px;">
    <h3 style="color:cadetblue;">Tür Güncelleme Sayfası</h3>
</div>
@using (Html.BeginForm("Guncelle","Tur",FormMethod.Post, new {@class="form-group"}))
 {
    <div style="margin-top:20px;">
        <label>Tür Id:</label>
        @Html.TextBoxFor(x=>x.Id, new {@class="form-control", @readonly="readonly" })
    </div>
    <div style="margin-top:20px;">
        <label>Tür Adı:</label>
        @Html.TextBoxFor(x=>x.Turad, new  { @class="form-control", @required="required"})
    </div>
    <div style="margin-top:20px;">
        <button class="btn btn-primary">Tür Güncelle</button>
    </div>
 }